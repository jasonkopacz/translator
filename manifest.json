{
  "version": "1.0",
  "manifest_version": 3,
  "name": "Word Translator",
  "description": "Extension to translate a small amount of words on the page to help with language learning",
  "permissions": ["storage", "scripting", "activeTab", "webRequest"],
  "host_permissions": [
    "https://*.deepl.com/*",
    "https://cors-anywhere.herokuapp.com/*",
    "<all_urls>"
  ],
  "background": {
    "service_worker": "src/pages/background/index.jsx",
    "type": "module"
  },
  "action": {
    "default_popup": "src/pages/popup/popup.html",
    "default_icon": {
      "32": "icon-32.png",
      "128": "icon-128.png"
    }
  },
  "icons": {
    "128": "icon-128.png"
  },
  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*", "<all_urls>"],
      "js": ["content.js"],
      "css": ["contentStyle.css"]
    }
  ]
}
